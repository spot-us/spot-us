- @title = "Spot.us - Login"

.block-padding

.login-boxer

  - # Register box 
  .span-6.register
    %h3 Register
    .double_content_border
    .row
      %label Your Name
      = text_field_tag "", :class=>"text"
    .block-padding
    .row
      %label Your E-mail Address
      = text_field_tag "", :class=>"text"
    .block-padding
    %span I am a:
    .row
      .float_left= radio_button_tag("", "", "")
      %label.float_left Community Member
    .row
      .float_left= radio_button_tag("", "", "")
      %label.float_left Professional Journalist
    .row
      .float_left= radio_button_tag("", "", "")
      %label.float_left News Organization
    .block-padding.clear 
    %p We'll email you a password which you can login and change.
    .double_content_border
    .float_right
      %input{:type => "button", :class=>"gray_button", :value => "Register &raquo;"}
    
  - # Login box 
  .span-6.or_login
    %h3 Or Login
    .double_content_border
    .row
      %label Your E-mail Address
      = text_field_tag "", :class=>"text"
    .block-padding
    .row
      %label Your Password
      = text_field_tag "", :class=>"text"
    .float-right
      %p
        = link_to "Forgot Password?", "#", :class => "forgot_password"
    .clear
    .double_content_border
    .float_right
      %input{:type => "button", :class=>"gray_button", :value => "Login &raquo;"}
    
    
  .clear
%img{:src=>"../images/spotus_ie_pixel.gif"}
.block-padding