<% @title = "Spot.us - Member Dashboard" %>
<%= render :partial => "layouts/common_questions" %>
<div id="myspot_dashboard">
   <h3>My Spot</h3>

   <%= render :partial => "myspot/nav", :locals => {:selected_tab => "dashboard"} %>
   <%= render :partial => "myspot/dashboard_nav", :locals => {:selected_tab => "pitches"} %>
   <div id="dashboard_content">
      <table class="pitches">
       <tr>
         <th class="pitch_header">Pitches</th>
         <th class="created_header">Created</th>
         <th class="donations_header">Donations</th>
         <th class="actions_header">Actions</th>
       </tr>
       <tr>
         <td colspan="4">
            <%= render :partial => "myspot/pitches/pitch", :collection => @pitches, :spacer_template => "myspot/pitches/pitch_spacer" %>
         </td>
       </tr>
      </table>
   </div>
</div>