%head{:xmlns => "http://www.w3.org/1999/xhtml","xmlns:fb"=>"http://www.facebook.com/2008/fbml"}
  %meta{ :name => "description", :content => @meta_description }/
  %meta{ :name => "keywords", :content => @meta_keywords }/

  %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-type" }/

  %title
    = @title || "Spot.us"
  
  /[if IE 6]
    = stylesheet_link_tag 'ie_spotus.css'
  = stylesheet_link_tag 'screen','screen_spotus','ie.css','facebox', :media => "screen", :cache => "styles_all"
  = stylesheet_link_tag 'print', :media => "print"
  
  
  = javascript_include_tag 'jquery-1.3.1.min'
  %script{:type => 'text/javascript'}
    jQuery.noConflict();
  = javascript_include_tag 'fckeditor/fckeditor','jquery-ui','jrails','jquery.pngFix','jquery.equalHeights','prototype','effects','jsProgressBarHandler','jquery.livequery','jquery.cookie','jcarousellite_1.0.1','jquery.form','application','auth','facebox', :cache => "js_all"
  = iboxify_page
  = yield :head
  
  - if current_user && !current_user.valid?
    :javascript
      jQuery(document).ready(function(){
           showProfileForm();
      });
  
