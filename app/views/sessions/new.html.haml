- form_tag session_path do
  %p
    %label{ :for => "login" } Login
    %br/
    = text_field_tag 'login'
  %p
    %label{ :for => "password" } Password
    %br/
    = password_field_tag 'password'
  %p
    %label{ :for => "remember_me" } Remember me:
    = check_box_tag 'remember_me'
  %p
    = submit_tag 'Log in'
