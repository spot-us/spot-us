@stories.each { |story|
  xml.url{
      apply_fragment ['sitemap_story_', story, @prefix_template] do
        xml << render (:partial=>"#{@prefix_template}url", 
          :locals=>{ 
              :title => story.headline,
              :url=>story_path(story, {:only_path=>false}), 
              :item_date=>story.updated_at, 
              :priority=>0.8 
          })
      end
  }
}