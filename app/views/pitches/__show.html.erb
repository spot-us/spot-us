<% content_for :head do %>
	<%= auto_discovery_link_tag(:rss, {:controller => 'pitches', :action => 'show', :id => @pitch.to_param, :tab=>"posts", :format => 'rss'}, {:title => "Story Updates - #{@pitch.headline}"}) %>
	<%= auto_discovery_link_tag(:rss, {:controller => 'pitches', :action => 'show', :id => @pitch.to_param, :tab=>"comments", :format => 'rss'}, {:title => "Comments - #{@pitch.headline}"}) %>
	<%= auto_discovery_link_tag(:rss, {:controller => 'pitches', :action => 'show', :id => @pitch.to_param, :tab=>"assignments", :format => 'rss'}, {:title => "Assignments - #{@pitch.headline}"}) %>
	<script>
		jQuery(document).ready(function($){
			jQuery("#show_action_items").click(function(){
				jQuery.facebox(jQuery("#action_buttons").html());
			});
			jQuery(".widget_code").hover(function(){
				$(this).addClass("hilited_input");
				}, function(){
					$(this).removeClass("hilited_input");
				}).click(function(){
					$(this).select();
			});
		});	
	</script>
<% end %>
<% @title = "Spot.us - Pitch: #{h @pitch.headline}" %>

<% if @subscriber && @subscriber.errors.any? %>
	<div class="error">
		<%= error_messages_for :subscriber %>
	</div>
<% end %>

<div id="news_item">
	<div id="news_item_header">
		<img width="62" height="53" align="left" style="padding-right: 10px;" src="/images/new_design/pitch.png"/>
		<h2 class="headline"><%= h @pitch.headline %></h2>
	</div>
	<div class="right-column">
		<%= render :partial => 'action_buttons', :locals => {:pitch => @pitch} %>
		
		<% unless @pitch.fully_funded? && @pitch.story && @pitch.story.published? %>
			<div class="right-panel-box">
				<div class="donate_option">
					<h2>MAKE A DIFFERENCE</h2>
					<%= render :partial => "donations/button", :locals => { :news_item => @pitch } %>
					<%= due_date_in_words(@pitch.expiration_date) %>
				</div>
				<div class="donate_option">
					<%= link_to image_tag("/images/new_design/donate-talent.png", :class => "display_block"), pitch_assignments_path(@pitch), :title => 'Join Reporting Team' %>
					<%= link_to(pluralize(@pitch.assignments.status_open.size, "assignments"), pitch_assignments_path(@pitch)) %>
				</div>
			</div>
		<% end %>
		
		<%if @pitch.story && @pitch.story.published?%>
			<div class="right-panel-box">
				<h3>Here is the published story</h3>
				STORY:
				<strong><%= link_to h(@pitch.story.headline), @pitch.story %></strong>
				<div class="dateline small">
					Posted
					<%= @pitch.story.created_at.to_s(:long_date) %>
					by
					<%= link_to h(@pitch.story.user.full_name), profile_path(@pitch.story.user) %>
					in
					<%= @pitch.story.network.name %>
				</div>
				<p>
					<%= truncate_words(strip_tags(@pitch.story.extended_description), 30) %>
					<%= link_to 'Read the published story &raquo;', @pitch.story %>
				</p>
			</div>
		<%end%>

		<div class="right-panel-box clearfix">
			<div class="share">
				<h3>Share</h3>
				<a title="Share this Pitch on Facebook" target="_blank" rel="nofollow" href="http://www.facebook.com/share.php?u=<%= begin @pitch.short_url rescue "" end %>&amp;t=<%= h @pitch.status_update(false) %>">
					<%= image_tag("/images/new_design/facebook.png") %>
				</a>
				<a  target="_blank" rel="nofollow" href="http://twitter.com/home?status=<%=begin h @pitch.status_update rescue "" end %>" title="Share this Pitch on Twitter"><%= image_tag("/images/new_design/twitter.png") %></a>
			</div>
			<div class="subscribe">
				<%= render :partial => 'subscriber_form', :locals => {:pitch => @pitch} %>
			</div>
		</div>

		<div class="right-panel-box clearfix">
			<div>
				<h3 class="get_widget"><%=image_tag("/images/new_design/widget.png")%> Get the Spot.Us Pitch Widget</h3> Want the embed code to add to your blog or site!? Grab the different widgets below.<br/>
				<a class="reveal_widget" href="#" rel="nofollow" style="text-decoration:underline;" onclick="slideWidget('simple_widget');return false;">Simple Widget</a> | <a class="reveal_widget" href="#" rel="nofollow" style="text-decoration:underline;" onclick="slideWidget('spotus_lite_widget');return false;">Spot.Us Lite</a>
				
				<div class="widget_panel" id='simple_widget'>
					<div style="border:1px solid #fff;margin:0px 0px 5px 0px;padding:0px;width:344px;">
						<iframe width='340' height='270' src='<%=pitch_path(@pitch)%>/widget' border='1' scrolling='no' noscroll></iframe>
					</div>
					<div class="widget_tip">To get this widget, just grab this html code and paste into your template.
						<textarea class="widget_code" style='width:320px;height:25px;'><%="<iframe width='340' src='#{pitch_path(@pitch,{:only_path=>false})}' border='1' scrolling='no' noscroll></iframe>"%></textarea>
						You can of course change the width of the iframe to fit your template.
					</div>
				</div>
				
				<div class="widget_panel" id='spotus_lite_widget'>
					<div class="widget_tip_lite">
						<h3>Spot.Us Lite</h3>
						<p><em>Spot.Us Lite</em> is widget which allows anyone to register at Spot.Us, login at Spot.Us and even donate to a pitch without having to leave the site hosting the widget. Isn't that cool?'</p>
						<p>You need to follow a few steps to get <em>Spot.Us Lite</em> working on your site. Just follow these simple steps below to get it up and running in no time.<p>
						<ol>
							<li>Download the file <a href='http://www.spot.us/helper.html' title='Grab the helper.html file' target='_blank'>http://www.spot.us/helper.html</a>, and upload it to your root folder on your server.</li>
							<li>Grab this html code and paste into your template:
							<textarea class="widget_code" style='width:300px;height:155px;'><%="<script type='text/javascript'> 						
   var spotus_lite_host = 'http://www.domain.com/path'; // Example: If you can access the helper.html file at http://www.domain.com/path/helper.html, then you add http://www.domain.com/path there.
   var spotus_lite_url = '#{pitch_path(@pitch,{:only_path=>false}).gsub('pitches','lite')}';
</script>
<script src='http://spot.us/javascripts/spotus_lite_min.js' type='text/javascript'></script>
<iframe width='300' src='' border='1' onChange='resizeIframe();' onLoad='resizeIframe();' id='spotus_lite' scrolling='no' noscroll></iframe>"
							%></textarea></li>	
							<li>You now need to modify the pasted code. You need to change <em>'http://www.domain.com/path'</em> to the root path of your server. Example: If you can access the helper.html file at http://www.domain.com/path/helper.html, then you add http://www.domain.com/path there.</li>					
						</ol>
						<p>You can of course change the width of the iframe to fit your template. Note: As Spot.Us Lite is an interactive widget, we recommend that you do not use widths below 300px.</p>
						<p>If you have any issues with the widget, please contact <a href='mailto:info@spot.us' title='info@spot.us'>info@spot.us</a></p>
					</div>
				</div>
			</div>
		</div>

		<div id="supporters">
			<%= render :partial => "news_items/organizational_supporters", :locals => {:news_item => @pitch} %>
			<%= render :partial => "group_supporters", :locals => {:news_item => @pitch} %>
			<%= render :partial => "supporters", :locals => {:news_item => @pitch} %>
		</div>
	</div>
	<div class="main-column">
		<div class="folded-headers-big">
			<% apply_fragment ['pitch_author_top_', @pitch, @pitch.user] do %>
				<div class="news_item_author">
					<%= link_to image_tag(@pitch.user.photo(:thumb), :class => "avatar"), profile_path(@pitch.user) %>
					<h5>Author</h5>
					<%= link_to @pitch.user.full_name, profile_path(@pitch.user), :class => "username" %>
				</div>
			<% end %>
			<% if @pitch.peer_reviewer %>
				<%apply_fragment ['pitch_peer_reviewer_top_', @pitch, @pitch.peer_reviewer] do %>
					<div class="news_item_author">
						<%= link_to(image_tag(@pitch.peer_reviewer.photo.url(:thumb), :class => "avatar"), profile_path(@pitch.peer_reviewer)) %>
						<h5>Peer Review Editor</h5>
						<%= link_to(h(@pitch.peer_reviewer.full_name), profile_path(@pitch.peer_reviewer), :class => "username") %>
					</div>
				<%end%>
			<% end %>
		</div>
		<% unless @pitch.video_embed.blank? || @item %>
			<div class="media-box">
				<h3>Multimedia</h3>
				<div class="align-center">
					<%= transform_embed_code(@pitch.video_embed, 560, 350) %>
				</div>
			</div>
		<% end %>
		<%if @item && !@item.media_embed.blank?%>
			<div class="media-box">
				<h3>Multimedia</h3>
				<div class="align-center">
					<%= transform_embed_code(@item.media_embed, 560, 350) %>
				</div>
			</div>
		<%end%>
		<div id="news_item_info">
			<%unless @item%>
				<%=render :partial=>'main'%>
			<%else%>
				<%=render :partial=>'item'%>
			<%end%>
		</div>
	</div>
</div>
